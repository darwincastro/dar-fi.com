---
export interface Props {
  content?: string;
}

const { content } = Astro.props;
---

<div class="alert alert-warning shadow-lg rounded-md">
  <div>
    <div>
      <div class="flex items-center gap-2 -mt-5 -mb-10">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
          ><path fill="currentColor" d="M12 2L1 21h22M12 6l7.53 13H4.47M11 10v4h2v-4m-2 6v2h2v-2"></path></svg
        >
        <p class="font-bold">Warning</p>
      </div>
      <p class="px-1">{content}</p>
    </div>
  </div>
</div>
